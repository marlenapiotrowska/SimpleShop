@using SimpleShop.Application.Shop
@model IEnumerable<ShopDto>

@{
    ViewData["Title"] = "Shops";
}

<h1>Look at all my shops</h1>

<p> 
    <a asp-controller="Shop" asp-action="Create" method="post" class="btn btn-success">Create New Shop</a>
</p>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                @if (item.IsEditable)
                {
                    <a class="btn btn-outline-secondary" asp-controller="Shop" asp-action="Edit" asp-route-shopid="@item.Id">Edit</a>
                }
            </div>
        </div>
    }
</div>