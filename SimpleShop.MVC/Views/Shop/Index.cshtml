@using SimpleShop.Application.Features.Shop
@model IEnumerable<ShopDto>

@{
    ViewData["Title"] = "Shops";
}

<h1>Look at all shops</h1>

<p class="mt-3">
    <a asp-controller="Shop" asp-action="Create" method="post" class="custom-button">Create New Shop</a>
</p>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="width: 20rem; color: #A0522D;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                @if (item.IsEditable)
                {
                    <a class="custom-button" asp-controller="Shop" asp-action="Edit" asp-route-shopid="@item.Id">Edit</a>
                    <a class="custom-button" asp-controller="Shop" asp-action="Delete" asp-route-shopid="@item.Id">Delete</a>
                }
            </div>
        </div>
    }
</div>