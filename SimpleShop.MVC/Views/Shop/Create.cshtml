@using SimpleShop.Application.Features.Shop.Create
@model CreateShopRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Shop</h1>
<head>
    <meta charset="utf-8" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleShop.MVC.styles.css" asp-append-version="true" />
</head>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Shop" asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="custom-label-input" />
                <span asp-validation-for="Name" class="text-danger validation-inline"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="custom-label-input" />
                <span asp-validation-for="Description" class="text-danger validation-inline"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="custom-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Shop" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
